{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.diary_entry
    _list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.diary_entry_list'|trans }}</h1>
    {% if pagination is defined and pagination|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'de.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.date'|trans, 'de.date') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.meal'|trans, 'm.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.product'|trans, 'p.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.calories'|trans, 'p.calories') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.serving'|trans, 'p.serving') }}</th>



                {#                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'de.title') }}</th>#}
{#                <th>{{ 'label.category'|trans }}</th>#}
{#                <th>{{ 'label.actions'|trans }}</th>#}
            </tr>
            </thead>
            <tbody>
            {% for diary_entry in pagination %}
                <tr>
                    <td>{{ diary_entry.id }}</td>
                    <td>{{ diary_entry.date|localizeddate }}</td>
                    <td>{{ diary_entry.meal.name }}</td>
                    <td>{{ diary_entry.product.productName }}</td>
                    <td>
                        {%
                        set calories = (diary_entry.product.calories * diary_entry.serving/100)
                         %}
                        {{ calories }}</td>
                    <td>{{ diary_entry.serving }}</td>


                    {#                    <td>{{ diary_entry.title }}</td>#}
{#                    <td>{{ diary_entry.category.title }}</td>#}
{#                    <td>#}
{#                        <a href="{{ url('diary_entry#}
{#                        _view', {id: diary_entry.id}) }}" title="{{ 'action.view'|trans }}">#}
{#                            {{ 'action.view'|trans }}#}
{#                        </a>#}
{#                    </td>#}
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}