{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.login'|trans }}
{% endblock %}

{% block body %}

    <h1 class="text-center">
        {{ 'title.login'|trans }}
    </h1>

    <form method="post" action="{{ url('security_login') }}">
        {% if error %}
            {%  include 'default/_single_flash_message.html.twig' with {
                type: 'danger',
                message: error.messageKey|trans(error.messageData, 'security')
            } %}
        {% endif %}

        <div class="form-group row">
            <label class="col-form-label col-sm-2 required" for="name">{{ 'label.name'|trans }}</label>
            <div class="col-sm-10">
                <input type="text" id="name" name="name" value="{{ last_username }}" class="form-control" required="required" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 required" for="password">{{ 'label.password'|trans }}</label>
            <div class="col-sm-10">
                <input type="password" id="password" name="password" class="form-control" required="required" />
            </div>
        </div>

        <div class="form-group text-center">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <input type="submit" value="{{ 'action.login'|trans }}" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <h1 class = "text-center">{{ 'title.register'|trans }}</h1>
        <div class = "text-center">
            <a href="{{ url('user_register') }}" class="btn btn-primary" role="button" title="{{ 'action.register'|trans }}">
                {{ 'action.register'|trans }}
            </a>
        </div>
    </div>

{% endblock %}